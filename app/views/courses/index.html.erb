<h1>Courses</h1>

<% if @course.present? %>
  <table class="table table-striped table-hover">
    <thead class="thread-dark">
      <tr>
      <th>ID</th>
        <th>Name</th>
        <th>Limit</th>
        <th>Details</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @course.each do |course| %>
        <tr>
        <td><%= course.id %></td>
          <td><%= course.name %></td>
          <td><%= course.limit %></td>
          <td><%= course.details %></td>
          <td><%= link_to 'Show', course %></td>
          <td><%= link_to 'De enroll', { action: :destroy, id: course.id }, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<% end %>

<%= link_to 'Enroll', new_enroll_path,  class:"btn btn-dark"%>
